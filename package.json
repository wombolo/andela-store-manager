{
  "name": "andela-store-manager",
  "version": "1.0.0",
  "description": "A store Manager api for providing basic e-store functions",
  "main": "server.js",
  "scripts": {
    "start": "babel-node --require dotenv/config --require babel-register ./server.js",
    "build": "babel controllers/*.js -d dist",
    "test": "mocha --require babel-register server/tests/*.js --exit",
    "testnyc": "nyc mocha tests/*.js --timeout=3000",
    "dev": "nodemon ./server.js --exec \"node --require dotenv/config --require babel-register\"",
    "coveralls": "nyc --require babel-register --require dotenv/config --reporter=lcov  node_modules/.bin/mocha server/tests/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wombolo/andela-store-manager.git"
  },
  "keywords": [
    "andela",
    "store",
    "manager",
    "express",
    "node",
    "javascript"
  ],
  "author": "wombolo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wombolo/andela-store-manager/issues"
  },
  "homepage": "https://github.com/wombolo/andela-store-manager#readme",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.0",
    "jsonwebtoken": "^8.3.0",
    "pg": "^7.5.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.1.0"
  }
}
